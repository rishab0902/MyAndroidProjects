<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_invisible"
        android:layout_width="323dp"
        android:layout_height="67dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="43dp"
        android:onClick="toDo"
        android:text="The Invisible Man To Do List"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/button_pop"
        app:layout_constraintEnd_toEndOf="@+id/button_pop"
        app:layout_constraintStart_toStartOf="@+id/button_pop"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_pop"
        android:layout_width="325dp"
        android:layout_height="72dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="515dp"
        android:onClick="toDo"
        android:text="Click to get pop-up message"
        android:textAllCaps="false"
        app:backgroundTint="#9628AA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_invisible"
        tools:ignore="UsingOnClickInXml" />
</androidx.constraintlayout.widget.ConstraintLayout>